            app:destination="@id/musicPlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/musicPlayerFragment"
        tools:layout="@layout/music_player_fragment"
        android:name="com.example.musicapp.MusicPlayerFragment"
        android:label="MusicPlayerFragment" />
</navigation>